<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="wechat_mall_modify_price_wizard_view_form" model="ir.ui.view">
            <field name="name">wechat_mall.modify.price.wizard.view_form</field>
            <field name="model">wechat_mall.modify.price.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="订单价格修改" class="oe_form_configuration">
                    <sheet>
                        <group>
                            <field name="order_id" invisible="1"/>
                            <field name="total"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="确定" name="apply" type="object" class="oe_highlight"/>
                        <button string="放弃" class="oe_link" special="cancel" readonly="0"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>